@model Configuration
@{
    ViewBag.Title = "Edit";
}

<div class="title-section">
    <h2 class="title">
        Edit Configuration
    </h2>
</div>

<form id="editConfigurationForm">
    <div class="form-group">
        <label for="Key">Key</label>
        <input type="text" name="Key" value="@Model.Key" class="form-control" id="key" aria-describedby="nameHelp" placeholder="Enter Key." />
    </div>
    <div class="form-group">
        <label for="Value">Value</label>
        <input type="text" name="Value" value="@Model.Value" class="form-control" id="value" placeholder="Enter Value.">
    </div>
    <div class="form-group">
        <button id="btnUpdateConfig"> Update </button>
    </div>
</form>




<script>
    
    $("#btnUpdateConfig").click(function () {

        $.ajax({
            type: 'POST',
            url: '/Configuration/Edit',
            data: $("#editConfigurationForm").serialize()
        })
            .done(function (response) {
                $("#configurationTableCont").html(response);
                $("#configurationActionCont").html("");
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("Fail");
            });
    });

</script>
